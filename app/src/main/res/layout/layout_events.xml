<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#404040">

            <ImageView
                android:id="@+id/symbolimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alef(ELF)"
                android:layout_below="@id/symbolimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/deepSkyBlue"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="18sp"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/cornFlowerBlue"/>

            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_below="@id/date"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is to inform all the students that i am very famous person"
                android:textSize="15sp"
                android:layout_below="@id/titleName"
                android:layout_marginTop="15sp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/proof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="5dp"
                android:text="Proof"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Source"
                android:layout_toRightOf="@id/proof"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="93%"
                android:layout_below="@id/proof"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="9dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72 votes"
                android:layout_below="@id/proof"
                android:layout_toRightOf="@id/percent"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/percent"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/my_progress"/>


            <TextView
                android:id="@+id/editDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 Aug 2018"
                android:layout_below="@id/progress"
                android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
                android:layout_marginBottom="9dp"
                android:textColor="#B0B0B0"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
